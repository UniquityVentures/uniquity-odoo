<odoo>
  <data>
    <!-- Site List View -->
    <record model="ir.ui.view" id="gandola_manager.list_site">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.site</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="address"/>
          <field name="status" widget="badge" decoration-warning="status == 'started'" decoration-primary="status == 'docs_done'" decoration-info="status == 'completed'" decoration-success="status == 'payment_settled'"/>
          <field name="gandola_ids" widget="many2many_tags"/>
          <field name="invoice_ids" string="# Invoices"/>
        </list>
      </field>
    </record>

    <!-- Site Kanban View -->
    <record model="ir.ui.view" id="gandola_manager.kanban_site">
      <field name="name">gandola_manager site kanban</field>
      <field name="model">gandola_manager.site</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name"/>
          <field name="address"/>
          <field name="status"/>
          <field name="gandola_ids"/>
          <field name="invoice_ids"/>
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_card oe_kanban_global_click">
                <div class="oe_kanban_content">
                  <div class="o_kanban_record_title">
                    <field name="name"/>
                  </div>
                  <div class="o_kanban_record_body">
                    <div>
                      <strong>Status:</strong> 
                      <span t-attf-class="badge badge-pill #{record.status.raw_value === 'payment_settled' ? 'badge-success' : record.status.raw_value === 'completed' ? 'badge-info' : record.status.raw_value === 'docs_done' ? 'badge-primary' : 'badge-warning'}">
                        <field name="status"/>
                      </span>
                    </div>
                    <div t-if="record.address.raw_value">
                      <strong>Address:</strong> 
                      <span><field name="address"/></span>
                    </div>
                    <div>
                      <strong>Gandolas:</strong>
                      <t t-if="record.gandola_ids.raw_value.length">
                        <field name="gandola_ids" widget="many2many_tags"/>
                      </t>
                      <t t-else="">
                        <span class="text-muted">No gandolas assigned</span>
                      </t>
                    </div>
                    <div>
                      <strong>Invoices:</strong>
                      <t t-if="record.invoice_ids.raw_value.length">
                        <span class="badge badge-pill badge-secondary">
                          <t t-esc="record.invoice_ids.raw_value.length"/> invoices
                        </span>
                      </t>
                      <t t-else="">
                        <span class="text-muted">No invoices</span>
                      </t>
                    </div>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Site Form View -->
    <record model="ir.ui.view" id="gandola_manager.form_site">
      <field name="name">gandola_manager site form</field>
      <field name="model">gandola_manager.site</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="status"/>
              </group>
              <group>
                <field name="start_date"/>
                <field name="end_date"/>
              </group>
            </group>
            <group>
              <field name="address"/>
            </group>
            <notebook>
              <page string="Gandolas">
                <field name="gandola_ids">
                  <list>
                    <field name="name"/>
                    <field name="current_site_id"/>
                    <field name="is_assigned"/>
                  </list>
                </field>
              </page>
              <page string="Invoices">
                <field name="invoice_ids">
                  <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="invoice_date"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Invoice Form View Inheritance -->
    <record model="ir.ui.view" id="gandola_manager.invoice_form_inherit">
      <field name="name">gandola_manager invoice form inherit</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='other_info']//group[@name='sale_info_group']" position="inside">
          <group name="gandola_info_group" string="Gandola Information">
            <field name="site_id" options="{'no_create': True, 'no_open': True}"/>
          </group>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
