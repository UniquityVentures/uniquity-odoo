<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gandola_manager.list_gandola">
      <field name="name">gandola_manager list</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gandola_manager.list_lending_record">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.lending_record</field>
      <field name="arch" type="xml">
        <list>
          <field name="gandola"/>
          <field name="site"/>
          <field name="start_date"/>
          <field name="end_date"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gandola_manager.list_site">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.site</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gandola_manager.list_invoice">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.invoice</field>
      <field name="arch" type="xml">
        <list>
          <field name="site"/>
          <field name="start_date"/>
          <field name="end_date"/>
        </list>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gandola_manager.gandola_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.gandola</field>
      <field name="view_mode">list,form</field>
    </record>
    <record model="ir.actions.act_window" id="gandola_manager.lending_record_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.lending_record</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gandola_manager.site_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.site</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gandola_manager.invoice_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.invoice</field>
      <field name="view_mode">list,form</field>
    </record>




    <!-- Top menu item -->
    <menuitem name="gandola_manager" id="gandola_manager.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Gandola" id="gandola_manager.gandola" parent="gandola_manager.menu_root"/>
    <menuitem name="Lending Records" id="gandola_manager.lending_record" parent="gandola_manager.menu_root"/>
    <menuitem name="Site" id="gandola_manager.site" parent="gandola_manager.menu_root"/>
    <menuitem name="Invoices" id="gandola_manager.invoice" parent="gandola_manager.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="gandola_manager.gandola_list" parent="gandola_manager.gandola"
              action="gandola_manager.gandola_action_window"/>

    <menuitem name="List" id="gandola_manager.lending_record_list" parent="gandola_manager.lending_record"
              action="gandola_manager.lending_record_action_window"/>

    <menuitem name="List" id="gandola_manager.site_record_list" parent="gandola_manager.site"
              action="gandola_manager.site_action_window"/>

    <menuitem name="List" id="gandola_manager.invoice_list" parent="gandola_manager.invoice"
              action="gandola_manager.invoice_action_window"/>
  </data>
</odoo>
