<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="gandola_manager.list_site">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.site</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="gandola_manager.list_gandola">
      <field name="name">gandola_manager list</field>
      <field name="model">gandola_manager.gandola</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
        </list>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="gandola_manager.gandola_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.gandola</field>
      <field name="view_mode">list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gandola_manager.site_action_window">
      <field name="name">gandola_manager window</field>
      <field name="res_model">gandola_manager.site</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Top menu item -->
    <menuitem name="gandola_manager" id="gandola_manager.menu_root"/>
    <!-- menus -->
    <menuitem name="Gandola" id="gandola_manager.gandola" parent="gandola_manager.menu_root"/>
      <menuitem name="List" id="gandola_manager.gandola_list" parent="gandola_manager.gandola"
              action="gandola_manager.gandola_action_window"/>

    <menuitem name="Site" id="gandola_manager.site" parent="gandola_manager.menu_root"/>
      <menuitem name="List" id="gandola_manager.site_record_list" parent="gandola_manager.site"
              action="gandola_manager.site_action_window"/>

  </data>
</odoo>
