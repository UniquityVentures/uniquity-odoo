<odoo>
  <data>
    <!-- Actions -->
    <record model="ir.actions.act_window" id="gandola_manager.gandola_action_window">
      <field name="name">Gandolas</field>
      <field name="res_model">gandola_manager.gandola</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

    <record model="ir.actions.act_window" id="gandola_manager.site_action_window">
      <field name="name">Sites</field>
      <field name="res_model">gandola_manager.site</field>
      <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menus -->
    <menuitem name="Gandola Manager" id="gandola_manager.menu_root"/>
    <menuitem name="Gandola" id="gandola_manager.gandola" parent="gandola_manager.menu_root" action="gandola_manager.gandola_action_window"/>
    <menuitem name="Site" id="gandola_manager.site" parent="gandola_manager.menu_root" action="gandola_manager.site_action_window"/>

  </data>
</odoo>
