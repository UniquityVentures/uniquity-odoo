<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="gandola_manager_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.gandola_manager</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Gandola Manager" string="Gandola Manager" name="gandola_manager" groups="base.group_system">
                        <block title="Product Configuration" id="gandola_product_settings">
                            <setting string="Gandola Rent Product">
                                <field name="gandola_product_id"/>
                                <div class="text-muted">Product used for gandola rental invoices (generates 3 monthly invoices)</div>
                            </setting>
                            <setting string="TPI Product">
                                <field name="tpi_product_id"/>
                                <div class="text-muted">Product used for TPI services</div>
                            </setting>
                            <setting string="DTI Product">
                                <field name="dti_product_id"/>
                                <div class="text-muted">Product used for DTI services</div>
                            </setting>
                            <setting string="Payment Terms">
                                <field name="gandola_payment_term_id"/>
                                <div class="text-muted">Default payment terms for generated invoices</div>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <!-- Keep your existing action and menu -->
        <record id="gandola_manager_settings_action" model="ir.actions.act_window">
            <field name="name">Gandola Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module': 'gandola_manager'}</field>
        </record>

        <menuitem
            id="gandola_manager_settings_menu"
            name="Settings"
            parent="gandola_manager.menu_root" 
            sequence="99"
            action="gandola_manager_settings_action"
            groups="base.group_system"/>
    </data>
</odoo>
